{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trust-evidence.dev/schemas/policy_decision.json",
  "title": "Policy Decision Event",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "span_id": {
      "type": "string",
      "minLength": 1
    },
    "parent_span_id": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "null"
        }
      ]
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "host": {
      "type": "string",
      "minLength": 1
    },
    "host_version": {
      "type": "string",
      "minLength": 1
    },
    "session_id": {
      "type": "string",
      "minLength": 1
    },
    "user_id": {
      "type": "string",
      "minLength": 1
    },
    "payload": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "decision": {
          "enum": [
            "allow",
            "block",
            "review"
          ]
        },
        "rules_evaluated": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "policy_summary": {
          "type": "string"
        }
      },
      "required": [
        "decision",
        "rules_evaluated"
      ]
    },
    "payload_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^1\\.[0-9]+\\.[0-9]+$"
    },
    "event_type": {
      "const": "policy_decision"
    }
  },
  "required": [
    "trace_id",
    "span_id",
    "parent_span_id",
    "ts",
    "host",
    "host_version",
    "session_id",
    "user_id",
    "payload",
    "payload_hash",
    "schema_version",
    "event_type"
  ]
}
